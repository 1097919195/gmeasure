<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin_0"
    android:paddingLeft="@dimen/activity_horizontal_margin_0"
    android:paddingRight="@dimen/activity_horizontal_margin_0"
    android:paddingTop="@dimen/activity_vertical_margin_0">

    <LinearLayout
        android:id="@+id/toolbar_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/base_toolbar" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/act_content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_wrapper"
        android:layout_below="@+id/toolbar_wrapper"
        android:background="@color/base">

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/bottom_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include layout="@layout/common_bottom" />
    </LinearLayout>
</RelativeLayout>