<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <!--TODO 通知什么的。。。-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/base_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/primary">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/ble_hint"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ble_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/connect2ble"
                android:textColor="@color/c252527"
                android:textSize="16sp" />
            <!--TODO 图标-->
            <!--<ImageView-->
            <!--android:layout_width="34dp"-->
            <!--android:layout_height="14dp"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:src="@mipmap/hand" />-->

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/scan_img"
        android:layout_width="181dp"
        android:layout_height="181dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        android:src="@mipmap/qrcode" />

    <TextView
        android:id="@+id/scan_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="19dp"
        android:text="@string/scan"
        android:textColor="@color/primary"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="@string/slogan_scan"
        android:textAlignment="center"
        android:textColor="@color/primary"
        android:textSize="18sp" />
</LinearLayout>