<?xml version="1.0" encoding="utf-8"?>
<com.npclo.gdemo.utils.views.MyLineLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <com.npclo.gdemo.utils.views.MyTextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textColor="@color/c252527"
        android:textSize="15sp" />

    <AutoCompleteTextView
        android:id="@+id/length"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textColor="@color/primary"
        android:textSize="16sp" />

    <AutoCompleteTextView
        android:id="@+id/angle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textColor="@color/primary"
        android:textSize="16sp" />

</com.npclo.gdemo.utils.views.MyLineLayout>