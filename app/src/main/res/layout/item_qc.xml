<?xml version="1.0" encoding="utf-8"?>
<com.npclo.gdemo.utils.views.MyLineLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:layout_gravity="center"
    android:background="@drawable/grid_bg"
    android:orientation="horizontal">

    <com.npclo.gdemo.utils.views.MyTextView
        android:id="@+id/tv"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/ff5001"
        android:textSize="16sp" />

    <com.npclo.gdemo.utils.views.MyTextView
        android:id="@+id/diff"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/primary"
        android:textSize="16sp" />

</com.npclo.gdemo.utils.views.MyLineLayout>